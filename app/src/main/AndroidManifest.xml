<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.gladson.pokedex">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="br.com.gladson.pokedex.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PokedexEgSYS">
        <activity
            android:name="br.com.gladson.pokedex.ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.PokedexEgSYS.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.gladson.pokedex.ui.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>